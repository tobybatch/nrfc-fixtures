{# templates/form/tailwind_theme.html.twig #}
{% use 'tailwind_2_layout.html.twig' %}

{%- block form_row -%}
    {%- set row_attr = row_attr|default({})|merge({
        class: (row_attr.class|default('') ~ ' mb-4')|trim
    }) -%}
    {{- parent() -}}
{%- endblock form_row -%}

{%- block widget_attributes -%}
    {%- set attr = attr|default({})|merge({
        class: (attr.class|default('') ~ ' bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500')|trim
    }) -%}
    {{- parent() -}}
{%- endblock widget_attributes -%}

{%- block form_label -%}
    {%- set label_attr = label_attr|default({})|merge({
        class: (label_attr.class|default('') ~ ' block mb-2 text-sm font-bold')|trim
    }) -%}
    {{- parent() -}}
{%- endblock form_label -%}

{%- block form_help -%}
    {%- set help_attr = help_attr|default({})|merge({
        class: (help_attr.class|default('') ~ ' mt-1 text-sm text-gray-500 dark:text-gray-400')|trim
    }) -%}
    {{- parent() -}}
{%- endblock form_help -%}

{%- block form_errors -%}
    {%- set error_item_class = 'mt-2 text-sm text-red-600 dark:text-red-500' -%}
    {{- parent() -}}
{%- endblock form_errors -%}