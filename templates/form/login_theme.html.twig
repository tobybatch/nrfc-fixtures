{% use 'form_div_layout.html.twig' %}

{# Text Input #}
{% block form_widget_simple -%}
    {% if type is not defined or type not in ['file', 'hidden'] %}
        {%- set attr = attr|merge({class: (attr.class|default('') ~ ' w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-accent focus:border-accent'}) -%}
        {% endif %}
            {{- parent() -}}
        {%- endblock form_widget_simple %}

            {# Checkbox #}
        {% block checkbox_widget -%}
        {%- set attr = attr|merge({class: (attr.class|default('') ~ ' h-4 w-4 text-accent focus:ring-accent border-gray-300 rounded')}) -%}
            {{- parent() -}}
        {%- endblock checkbox_widget %}

            {# Form Label #}
        {% block form_label -%}
        {%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' block text-sm font-medium text-gray-700')}) -%}
            {{- parent() -}}
        {%- endblock form_label %}

            {# Form Row #}
        {% block form_row -%}
        {%- set row_attr = row_attr|merge({class: (row_attr.class|default('') ~ ' space-y-1 mb-4'}) -%}
            <div{% with {attr: row_attr} %}{{ block('attributes') }}{% endwith %}>
                {{- form_label(form) -}}
                {{- form_widget(form) -}}
                {{- form_help(form) -}}
                {{- form_errors(form) -}}
            </div>
        {%- endblock form_row %}

            {# Form Errors #}
        {% block form_errors -%}
        {%- if errors|length > 0 -%}
            <ul class="mt-1 text-sm text-red-600">
                {%- for error in errors -%}
                <li>{{ error.message }}</li>
                {%- endfor -%}
            </ul>
        {%- endif -%}
        {%- endblock form_errors %}

            {# Submit Button #}
        {% block button_widget -%}
        {%- set attr = attr|merge({class: (attr.class|default('') ~ ' w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-accent hover:bg-accent-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent')}) -%}
            {{- parent() -}}
        {%- endblock button_widget %}