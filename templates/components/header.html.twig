<header class="bg-primary text-white py-4 shadow-md">
    <div class="container mx-auto px-4 flex justify-between items-center">
        <div class="text-center">
            <div class="text-2xl font-bold mb-1">
                <img class="inline" src="{{ asset('/static/images/LionHead-h50.png') }}" alt="Lion head" />
                <span class="text-2xl inline">
                    <a href="{{ path('app_fixture_index') }}">NRFC Fixtures</a></span>
            </div>
        </div>

        <div class="flex items-right space-x-4">
            {% if app.user %}
                <a href="{{ path("app_profile")}}" class="bg-accent hover:bg-accent-dark text-white font-bold py-2 px-4 rounded text-sm">
                    {{ app.user.userIdentifier }}
                </a>
                <a href="{{ path('app_logout') }}" class="bg-accent hover:bg-accent-dark text-white font-bold py-2 px-4 rounded text-sm">
                    Logout
                </a>
            {% elseif hide_top_login is not defined or not hide_top_login %}
                <a href="{{ path('app_login') }}" class="bg-accent hover:bg-accent-dark text-white font-bold py-2 px-4 rounded text-sm">
                    Login
                </a>
            {% endif %}
        </div>
    </div>
</header>