
{% if showHelp() %}
<div
        class="mb-4 bg-blue-50 border-l-4 border-blue-400 p-4 relative help"
        data-helptoggle-target="content"
        {% if not showHelp(app.request) %}
                hidden
        {% endif %}
>
        <button
                data-helptoggle-target="hideButton"
                data-action="click->helptoggle#hide"
                class="absolute top-2 right-2 text-blue-500 hover:text-blue-700">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-5 w-5"
                     viewBox="0 0 20 20"
                     fill="currentColor">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
        </button>
        <p class="text-blue-800 mb-2 font-medium">Tip:</p>
        {% if app.request.get('_route') == "app_fixture_index" %}
                <p class="text-blue-700 mb-2">Click the date to show just the fixtures for that day.</p>
                <p class="text-blue-700">Click team name (e.g. U13B) to show just the fixtures for that team.</p>
        {% endif %}

</div>
{% endif %}