{% extends 'base.html.twig' %}

{% block title %}Hello FixtureController!{% endblock %}

{% block body %}

    <div>
        <table>
            <tr>
                <th>Date</th>
                <th>Minis</th>
                <th>U13B</th>
                <th>U14B</th>
                <th>U15B</th>
                <th>U16B</th>
                <th>U18B</th>
                <th>U12G</th>
                <th>U14G</th>
                <th>U16G</th>
                <th>U18G</th>
            </tr>
            {# fixtures are in a grid, rows by date, cols by team #}
            {% for date, fixtures_on_date in fixtures %}
                <tr>
                    <td>{{ date|date('j M y') }}</td>
                    {# each col is a different team #}
                    {% for fixtures_by_team in fixtures_on_date %}
                        <td>
                            {# each date for a team, may have multiple fixtures #}
                            {% for fixture in fixtures_by_team %}
                                 {{ fixture }}
                            {% endfor %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
