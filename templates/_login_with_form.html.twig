
{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-primary">
                    Sign in to your account
                </h2>
            </div>
            <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
                {% if error %}
                    <div class="mb-4 bg-red-50 border-l-4 border-red-500 p-4">
                        <div class="flex">
                            <div class="text-red-500">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        </div>
                    </div>
                {% endif %}

                {{ form_start(form, {attr: {class: 'mb-0 space-y-6'}}) }}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {{ form_row(form.email) }}
                {{ form_row(form.password) }}

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        {{ form_widget(form.remember_me) }}
                        {{ form_label(form.remember_me) }}
                    </div>

                    <div class="text-sm">
                        <a href="{{ path('app_forgot_password_request') }}" class="font-medium text-accent hover:text-accent-dark">
                            Forgot your password?
                        </a>
                    </div>
                </div>

                <div>
                    <button type="submit" class="button">
                        Sign in
                    </button>
                </div>
                {{ form_end(form) }}

                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-300"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">
                            Or
                        </span>
                        </div>
                    </div>

                    <div class="mt-6">
                        <a href="{{ path('app_register') }}"
                           class="w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent">
                            Create a new account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}