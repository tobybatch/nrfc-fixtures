<form method="post" action="{{ path('app_club_delete', {'id': club.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input
            type="hidden"
            name="_token"
            value="{{ csrf_token('delete' ~ club.id) }}"
    >
    <button class="btn">
        {% if button_text is defined %}
            <span class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            {{ button_text }}
            </span>
        {% else %}
        âœ–
        {% endif %}
    </button>
</form>
