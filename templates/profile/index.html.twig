{# templates/profile/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/@tailwindcss/forms@0.5.3/dist/forms.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Your Profile
            </h2>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                <div class="mb-6 text-gray-700">
                    <p class="text-lg font-medium">Email: {{ user.email }}</p>
                    <p class="text-lg font-medium">Roles: {{ user.roles | join(', ') }}</p>
                    <p class="mt-2 text-sm text-gray-500">Change email coming soon (for now email rugby@nfn.org.uk)</p>
                </div>
                <div class="mt-6">
                    <a href="{{ path('app_forgot_password_request') }}" class="flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Send a password reset link
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}