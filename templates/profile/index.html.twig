{# templates/profile/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/@tailwindcss/forms@0.5.3/dist/forms.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Your Profile
            </h2>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                {{ form_start(profileForm) }}

                {% for flash_error in app.flashes('error') %}
                    <div class="mb-4 rounded-md bg-red-50 p-4">
                        <div class="flex">
                            <div class="ml-3">
                                <p class="text-sm font-medium text-red-800">{{ flash_error }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {% for flash_success in app.flashes('success') %}
                    <div class="mb-4 rounded-md bg-green-50 p-4">
                        <div class="flex">
                            <div class="ml-3">
                                <p class="text-sm font-medium text-green-800">{{ flash_success }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="space-y-6">
                    <div>
                        {{ form_label(profileForm.email, null, {
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                        }) }}
                        <div class="mt-1">
                            {{ form_widget(profileForm.email) }}
                            {{ form_errors(profileForm.email) }}
                        </div>
                    </div>

                    <div>
                        {{ form_label(profileForm.currentPassword, null, {
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                        }) }}
                        <div class="mt-1">
                            {{ form_widget(profileForm.currentPassword) }}
                            {{ form_errors(profileForm.currentPassword) }}
                        </div>
                    </div>

                    <div>
                        {{ form_label(profileForm.newPassword.first, null, {
                            'label': 'New Password',
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                        }) }}
                        <div class="mt-1">
                            {{ form_widget(profileForm.newPassword.first) }}
                            {{ form_errors(profileForm.newPassword.first) }}
                        </div>
                    </div>

                    <div>
                        {{ form_label(profileForm.newPassword.second, null, {
                            'label': 'Repeat New Password',
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                        }) }}
                        <div class="mt-1">
                            {{ form_widget(profileForm.newPassword.second) }}
                            {{ form_errors(profileForm.newPassword.second) }}
                        </div>
                    </div>

                    <div>
                        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Update Profile
                        </button>
                    </div>
                </div>
                {{ form_end(profileForm) }}
            </div>
        </div>
    </div>
{% endblock %}