{{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}

<div class="text-red-600 text-sm">
    {{ form_errors(form) }}
</div>

<h2 class="text-xl font-semibold">Fixture Details</h2>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
        {{ form_label(form.date, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.date, {'attr': {'class': 'js-datepicker mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
        {{ form_errors(form.date) }}
    </div>

    <div>
        {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'js-datepicker mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div>
        {{ form_label(form.homeAway, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.homeAway, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
        {{ form_errors(form.homeAway) }}
    </div>

    <div class="md:col-span-2">
        {{ form_label(form.competition, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.competition, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
        {{ form_errors(form.competition) }}
    </div>
</div>

<h2 class="text-xl font-semibold mt-8">Norwich Team</h2>
<div>
    {{ form_label(form.team, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(form.team, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
    {{ form_errors(form.team) }}
</div>

<h2 class="text-xl font-semibold mt-8">Opponent</h2>
<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
        {{ form_label(form.club, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.club, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
        {{ form_errors(form.club) }}
    </div>

    <div>
        {{ form_label(form.opponent, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(form.opponent, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
        {{ form_help(form.opponent) }}
        {{ form_errors(form.opponent) }}
    </div>
</div>

<h2 class="text-xl font-semibold mt-8">Detail</h2>
<div>
    {{ form_label(form.notes, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(form.notes, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
    {{ form_errors(form.notes) }}
</div>

<div class="pt-6">
    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        {{ button_label|default('Save') }}
    </button>
</div>

{{ form_end(form) }}
