{% extends 'base.html.twig' %}

{% block title %}All{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-primary text-2xl font-bold">Fixtures</h1>
        {% if app.user is not null and 'ROLE_ADMIN' in app.user.roles %}
            <a href="{{ path('app_fixture_new') }}" class="bg-accent hover:bg-accent-dark text-white font-bold py-2 px-4 rounded flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                          d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"
                          clip-rule="evenodd"/>
                </svg>
                Create New
            </a>
        {% endif %}
    </div>

    <div>
        <table class="min-w-full bg-white border border-gray-200 rounded-lg overflow-hidden">
            <thead class="bg-tertiary text-white">
            <tr>
                <th class="px-4 py-3 text-left text-sm font-semibold uppercase tracking-wider">Date</th>
                {% for team in teams %}
                    <th class="px-4 py-3 text-left text-sm font-semibold uppercase tracking-wider">
                        <a href="{{ path('app_fixture_index') }}?team={{ team.value }}" class="text-white hover:text-gray-300">
                            {{ team.value }}
                        </a>
                    </th>
                {% endfor %}
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
            {% for date, fixtures_on_date in fixtures %}
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                        <a href="{{ path('app_fixture_bydate', parameters = {date: date|date('Ymd')}) }}" class="text-blue-600 hover:text-blue-800">
                            {{ date|date('j M y') }}
                        </a>
                    </td>
                    {# each col is a different team #}
                    {% for fixtures_by_team in fixtures_on_date %}
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">
                            {# each date for a team, may have multiple fixtures #}
                            {% if fixtures_by_team is not empty %}
                                {% for fixture in fixtures_by_team %}
                                    <a href="{{ path('app_fixture_show', {'id': fixture.id}) }}" class="text-blue-600 hover:text-blue-800 block">
                                        {{ fixture }}
                                    </a>
                                {% endfor %}
                            {% else %}
                                <span class="text-gray-500">-</span>
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}