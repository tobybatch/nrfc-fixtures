<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>NRFC Fixtures: {% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <!-- block stylesheets -->
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <!-- end block stylesheets -->
    <!-- block js -->
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <!-- end block js -->
</head>
<body class="min-h-screen bg-gray-50 flex flex-col">


<!-- Optional Header -->
<header class="bg-white shadow-sm py-4">
    <div class="container mx-auto px-4">
        <h1 class="text-2xl font-bold text-gray-800">NRFC Fixtures</h1>
    </div>
</header>

<!-- Main Content Area -->
<main class="flex-grow flex items-center justify-center p-4">
    <div class="w-full max-w-2xl bg-white rounded-xl shadow-md overflow-hidden p-6 sm:p-8">
        <!-- Content goes here -->
        <h2 class="text-2xl font-bold text-gray-800 mb-4">
            {% block page_title %}Title here{% endblock %}
        </h2>
        <p class="text-gray-600 mb-6">
            {% block header %}{% endblock %}
        </p>
        <div class="space-y-4">
            <div class="p-4 bg-blue-50 rounded-lg">
                {% block body %}
                    <h3 class="font-medium text-blue-800">Feature One</h3>
                    <p class="text-sm text-blue-600">Description of this feature goes here.</p>
                {% endblock %}
            </div>
            <div class="p-4 bg-green-50 rounded-lg">
                {% block footer %}
                    <h3 class="font-medium text-green-800">Feature Two</h3>
                    <p class="text-sm text-green-600">Description of this feature goes here.</p>
                {% endblock %}
            </div>
        </div>
    </div>
</main>

<!-- Optional Footer -->
<footer class="bg-gray-100 py-4">
    <div class="container mx-auto px-4 text-center text-gray-500 text-sm">
        &copy; 2023 Your Company. All rights reserved.
    </div>
</footer>
</body>
</html>
