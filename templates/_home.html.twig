{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-primary text-3xl font-bold mb-6">Welcome to Our Application</h1>
        <p class="text-lg mb-8">This is a responsive web application built with Symfony and Tailwind CSS.</p>

        <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-secondary text-xl font-semibold mb-3">Data Management</h2>
                <p>View and manage your project data in our easy-to-use interface.</p>
                <a href="{{ path('app_data') }}" class="mt-4 inline-block bg-accent text-white px-4 py-2 rounded hover:bg-opacity-90 transition">View Data</a>
            </div>

            <div class="bg-white p-6 rounded-lg shadow">
                <h2 class="text-secondary text-xl font-semibold mb-3">Reports</h2>
                <p>Generate detailed reports from your project data.</p>
                <a href="{{ path('app_reports') }}" class="mt-4 inline-block bg-accent text-white px-4 py-2 rounded hover:bg-opacity-90 transition">View Reports</a>
            </div>
        </div>
    </div>
{% endblock %}